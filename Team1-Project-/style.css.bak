*{
	margin: 0;
	padding: 0;
}

.header{
	height:80px;
	width: 100%;
	background-color: #2B59C3;
}

nav{
	display: flex;
	padding: 2% 6%;
	justify-content: flex-end;
	align-items: right;
}

.nav-links{
	flex 1;
	text-align: right;
	font-family: Arial;
}

.nav-links ul li{
 	list-style: none;
 	display: inline-block;
 	padding: 5px 12px;
 	position: relative;	
 	background-color: #8AA370;
 	border: none;
  	border-radius: 5px;
}

.nav-links ul li a{
	color: #fff; 
	text-decoration: none;
}

div#layout{
	background-color:#fff; 
	width: 1100px;
	margin: 50px auto;
	position:relative;
}

div#t-header{
	background-color: #89BBFE;
	width: 1100px;
	height: 150px;
}

div#tittle-text{
	/*position: relative;*/
	font-family: Calibri;
	color: #2B59C3;
	text-align: center;
	padding: 5%;
}

div#text-box {
	font-family: Calibri;
	font-size: 18px;
	text-align: center;
}

/* THIS PART IS THE STYLE OF THE -SECURITY PAGE- */


div#t-book{
	/*position: relative;*/
	font-family: Calibri;
	color: #fff;
	text-align: center;
	padding: 5%;
}

div#left-box{
	margin-top: 40px;
	position: absolute;
	background-color: #fff;
	width: 700px;
	height: 430px;
}

div#right-box{
	margin-top: 40px;
	position: absolute;
	background-color: rgba(138, 163, 112, 0.7);
	width: 355px;
	height: 430px;
	right: 0;
	
	
}
/* THIS PART IS THE STYLE OF THE -ToC- */
div#list-index {
	position: absolute;
	color: #000000;
	text-align: left; /*margin: 10%;*/
	margin-top:  20px;
	margin-left: 44px;
}

ol li{
	margin-top:  13px;
}

ol li a{
	text-decoration: none;
	box-shadow: inset 0 0 0 0 #8AA370;
  	color: #000;
  	/*margin: 0 .25rem;*/
  	padding: 0 .25rem;
  	transition: color .4s ease-in-out, box-shadow .4s ease-in-out;
}

ol li a:hover {
  box-shadow: inset 400px 0 0 100px #fff;
  color: #89BBFE;
}
